<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aurlien.businesscard.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur Business Card Generator"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/contacts_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charger les contacts"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cards_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/contacts_access"
        android:layout_alignStart="@+id/contacts_access"
        android:layout_below="@+id/contacts_access"
        android:layout_marginTop="13dp"
        android:text="Afficher les cartes" />

    <Button
        android:id="@+id/google_maps_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cards_access"
        android:layout_alignStart="@+id/cards_access"
        android:layout_below="@+id/cards_access"
        android:layout_marginTop="15dp"
        android:text="Google Maps" />
</RelativeLayout>
